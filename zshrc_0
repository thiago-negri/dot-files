PATH=$PATH:$HOME/.fzf/bin
export PATH

TMP=$HOME/.tmp
export TMP

TEMP=$HOME/.tmp
export TEMP

EDITOR=nvim
export EDITOR

# Set prompt
PS1=$'\n'"%F{green}%n%f %F{black}@%f %F{blue}%/%f"$'\n'"> "
export PS1

# Set up fzf key bindings and fuzzy completion
source <(fzf --zsh)

# Set up theme in bat
BAT_THEME="Nord"
export BAT_THEME

# Aliases
alias l="ls --color -lhAF"

# fossil stuff
FOSSIL_USER=tnegri
export FOSSIL_USER
alias fossildiff="fossil changes | awk '{print \$2}' | fzf --preview 'fossil diff {}'"

