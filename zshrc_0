HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt APPEND_HISTORY
setopt INC_APPEND_HISTORY
setopt HIST_IGNORE_DUPS

PATH=$PATH:$HOME/.fzf/bin
export PATH

TMP=$HOME/.tmp
export TMP

TEMP=$HOME/.tmp
export TEMP

EDITOR=nvim
export EDITOR

# Set prompt
PS1=$'\n'"%F{green}%n%f %F{black}@%f %F{blue}%/%f"$'\n'"> "
export PS1

# Set up fzf key bindings and fuzzy completion
source <(fzf --zsh)

# Set up theme in bat
BAT_THEME="Nord"
export BAT_THEME

# Aliases
alias l="ls --color -lhAF"

