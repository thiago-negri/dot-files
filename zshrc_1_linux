# keep in sync with wezterm's sessionizer
GG_FOLDERS=(
    "/home/hunz/projects"
    "/home/hunz/.config"
)
gg-find() {
    find $GG_FOLDERS -maxdepth 2 -mindepth 2 -type d -name .git | xargs dirname
}

