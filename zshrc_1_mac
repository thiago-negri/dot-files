# Functions
jvm_8() {
    JAVA_HOME=/Library/Java/JavaVirtualMachines/openlogic-openjdk-8.jdk/Contents/Home/
    export JAVA_HOME
}

jvm_21() {
    JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk-21.jdk/Contents/Home
    export JAVA_HOME
}

# keep in sync with wezterm's sessionizer
gg-find() {
    local folders=(
        "/Users/thiago.negri/projects"
        "/Users/thiago.negri/.config"
        "/Users/thiago.negri/.vim/pack/downloads/opt"
        "/Users/thiago.negri/.vim/pack/downloads/start"
    )
    find "${folders[@]}" -maxdepth 2 -mindepth 0 -type d -name .git -exec dirname '{}' \; | sort -u
}
